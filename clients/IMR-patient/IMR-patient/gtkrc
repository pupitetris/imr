# pixmap_path "blah;foo;var"

style "mainBgStyle"
{
	bg[NORMAL] = "white"
}

widget "IMRpatient.MainWindow" style "mainBgStyle"

style "mainMenuStyle"
{
	engine "pixmap" {
		image {
			function = BOX
			recolorable = TRUE
			file = "menu_bg.png"
			stretch = FALSE
		}
	}
}

style "mainMenuItemStyle"
{
	engine "pixmap" {
		image {
			state = PRELIGHT
			function = BOX
			file = "menu_prelight_bg.png"
			stretch = FALSE
		}
	}
}

style "mainMenuAccelLabelStyle"
{
	fg[NORMAL] = "white"
	font_name = "Bold"
}

class "GtkMenuBar" style "mainMenuStyle"
widget_class "*GtkMenuBar*Gtk*MenuItem" style "mainMenuItemStyle"
widget_class "*GtkMenuBar*GtkAccelLabel" style "mainMenuAccelLabelStyle"
